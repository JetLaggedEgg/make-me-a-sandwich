#!/bin/bash

# Made by http://github.com/jetlaggedegg/make-me-a-sandwich

#
#
#     Make me a sandwich.
#             |
#             |             What? Make
#             |            it yourself.
#             |                 |
#       Sudo make me            |
#        a sandwich.            |
#             |                 |
#             \               Okay.
#              \                \
#              |_                \   _
#           _ /   \                /   \
#          /  \__/                 \_ /
#         |   \||                   /|\
#         |    \\_\________        | ||
#         |     |__\_______\         |
#         |         \      |\       /\
#         |_______________/ |      |  \
#         O               O |      |  |

if [ "$(whoami)" != "root" ]; then
  echo "What? Make it yourself."
else
  echo "Okay."
  echo -n "."
  sleep 1
  echo -n "."
  sleep 1
  echo -n "."
  sleep 1
  cat << "EOF"
                   _.---._
                _.-~       ~-._
            _.-~               ~-._
        _.-~                       ~---._
    _.-~                                 ~\
 .-~                                    _.;
 :-._                               _.-~ ./
 `-._~-._                   _..__.-~ _.-~
  /  ~-._~-._              / .__..--~----._
 \_____(_;-._\.        _.-~_/       ~).. . \
    /(_____  \`--...--~_.-~______..-+_______)
  .(_________/`--...--~/    _/nad        /\
 /-._     \_     (___./_..-~__.....__..-~./
 `-._~-._   ~\--------~  .-~_..__.-~ _.-~
     ~-._~-._ ~---------'  / .__..--~
         ~-._\.        _.-~_/
             \`--...--~_.-~
              `--...--~
EOF
fi
